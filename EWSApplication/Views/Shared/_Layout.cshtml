<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css" />
    @*@Scripts.Render("~/bundles/modernizr")*@
</head>
<body class="wrapper">
    <header>
        <div class="container">
            <div class="header-data">
                <div class="logo">
                    <a href="@Url.Action("Index", "Home")" title=""><img src="~/Assets/images/logo.png" alt=""></a>
                </div>
                <div class="search-bar">
                    <form>
                        <input type="text" name="search" placeholder="Search...">
                        <button type="submit"><i class="fas fa-search"></i></button>
                    </form>
                </div>
                <nav>
                    <ul>
                        <li>
                            <a href="@Url.Action("Index", "Home")" title="">
                                <span><img src="~/Assets/images/icon1.png" alt=""></span>
                                Home
                            </a>
                        </li>
                        
                       
                        
                        
                        
                        
                    </ul>
                </nav>
                <div class="menu-btn">
                    <a href="#" title=""><i class="fa fa-bars"></i></a>
                </div>
                <div class="user-account">
                    <div class="user-info">
                        <img src="~/Assets/images/resources/user.jpg" style="height:30px;width:30px" alt="">
                            <a href="#" title="">Acc</a>

                        <i class="fas fa-sort-down"></i>
                    </div>
                    <div class="user-account-settingss">
                        <h3>Online Status</h3>
                        <ul class="on-off-status">
                            <li>
                                <div class="fgt-sec">
                                    <input type="radio" name="cc" id="c5">
                                    <label for="c5">
                                        <span></span>
                                    </label>
                                    <small>Online</small>
                                </div>
                            </li>

                        </ul>
                        <h3>Information</h3>
                        <ul class="on-off-status">
                            <li>
                                <div class="fgt-sec">

                                    <small>Name:      <a href="#" title="">@ViewBag.userName</a></small>
                                    <br><br>
                                    <small>Faculty:      <a href="#" title="">@ViewBag.facultyname</a></small>
                                </div>
                            </li>

                        </ul>
                        <h3>Custom Status</h3>
                        <div class="search_form">
                            <form>
                                <input type="text" name="search">
                                <button type="submit">Ok</button>
                            </form>
                        </div>

                        <h3 class="tc"><a href="@Url.Action("Logout", "Home")" title="">Logout</a></h3>
                    </div>
                </div>
            </div>
        </div>
    </header>
    
    <div class="container">
        @RenderBody()
    </div>

    

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/slick")
    @Scripts.Render("~/bundles/js")
    @RenderSection("scripts", required: false)
</body>
</html>
